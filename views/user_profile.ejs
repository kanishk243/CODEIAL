        <div id="friends" class="tab-pane">
          <div class="profile-users clearfix">
            <% for (friend of friends) { %>
              <% let other = null; if(String(friend.sender._id)!= String(profile_user._id)){other = friend.sender} else if(String(friend.reciever._id)!= String(profile_user._id)){other = friend.reciever}; %>
              <% if(other) { %>
            <div class="itemdiv memberdiv">
              <div class="inline pos-rel">
                <div class="user">
                  <a href="/users/profile/<%= other._id %>">
                    <% if(other.avatar) {%>
                    <img
                      src="<%= other.avatar %>"
                      alt="<%=other.name %>'s avatar"
                    />
                    <%} else { %>
                      <img
                      src="https://icon-library.com/images/no-profile-pic-icon/no-profile-pic-icon-11.jpg"
                      alt="<%=other.name %>'s avatar"
                    />
                      
                    <% } %>
                  </a>
                </div>

                <div class="body">
                  <div class="name">
                    <a href="/users/profile/<%= other._id %>">
                      <span class="user-status status-online"></span>
                      <%= other.name %>
                    </a>
