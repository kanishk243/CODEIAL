                  onclick="window.location.href='/users/update-page/<%= self.id %>'"
                  class="btn btn-sm btn-block btn-warning"
                >
                  <i class="ace-icon fa fa-cog bigger-120"></i>
                  <span class="bigger-110">Update Profile</span>
                </a>
